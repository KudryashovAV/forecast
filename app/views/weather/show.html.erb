<%= form_tag url: root_path, method: 'get' do %>
  <%= label_tag 'Please enter a city' %>
  <%= text_field_tag 'query', params[:query] %>
  <%= submit_tag %>
<% end %>

<% if @data %>
  Current temperature is: <%= @data["main"]["temp"] - 273.15 %> &degC
<% else %>
   "Please enter a city"
<% end %>

