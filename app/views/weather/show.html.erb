<%= form_tag url: root_path do %>
  <%= label_tag "Please enter a city" %>
  <%= text_field_tag "query", params[:query] %>
  <%= submit_tag %>
<% end %>

<% if @data %>
  <% uri = "http://api.openweathermap.org/data/2.5/weather?" + params[:query] %>
  <% puts uri + 272,15%>
<% else %>
  <%= puts "Please enter a city" %>
<% end %>

