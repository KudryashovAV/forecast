<%= form_tag root_path, method: 'get' do %>
	<%= label_tag 'Please enter a city' %>
	<%= text_field_tag 'query', params[:query] %>
	<%= submit_tag %>
<% end %>

<% if @data == nil %>  
	City not found
<% else %>
	Current temperature is: <%= (@data["main"]["temp"] - 273.15).round 0 %>&degC, <%= @data["sys"]["country"] %> 
<% end %>

